		KAI_Actor.DeflectDamageFactor 0.6;
		KAI_Actor.DeflectSlowDownFactor 0.75;
		KAI_Actor.DeflectionFunnel (10,-10,10,-10);
	}
	
	Override String GetObituary (Actor Victim, Actor Inflictor, Name MOD, Bool PlayerAttack)
	{
		If (FireMode == MODE_SINGLE) //Was killed while the turret is in single fire mode.
			Return "%o was sniped by ground drone";
		
		If (MOD == "Explosive")
			Return "%o was wondering what that tube on the side of the robot was";
		
		Return Super.GetObituary (Victim, Inflictor, MOD, PlayerAttack);
	}
	
	Override Void PostBeginPlay()
	{
		Super.PostBeginPlay();
		
		FireOfs = (0,0,16);
		AttackStates.Push (FindState ("Fire.Rocket",True));
		RocketHazard = New ("HazardInfo"); //Create hazard information.
		If (RocketHazard)
		{
			Array <String> Tags;
			Tags.Push ("Explosive");
			//Hazard.Position = Data.HitPos;
			RocketHazard.Origin = Self;
			RocketHazard.Range = 256;
			RocketHazard.Type = HazardInfo.HAZARD_ATTACK;
			RocketHazard.Level = HazardInfo.HAZARD_LARGE;
			//Hazard.Flags = Flags;
			RocketHazard.CustomTags.Copy (Tags);
		}
	}
	
	Override Vector3 GetAttackLocation()
	{
		FLineTraceData Where;
		Double Ang;
		If (Target) Ang = !IsInState (Self,"Fire.Rocket") ? Angle : AngleTo (Target);
		Else Ang = Angle;
		Double Pit;
		If (Target) Pit = !IsInState (Self,"Fire.Rocket") ? Pitch : PitchTo (Target,16,GetFAFPosOffset(Target,TurretAimPos));
		Else Pit = Pitch;
		LineTrace (Ang,8192*2,Pit,TRF_BLOCKSELF,VertOffset,data:Where);
		Return Where.HitLocation;
	}
	
	Override Void Tick()
	{
		Super.Tick();
		
		If (IsFrozen()) Return;
		
		If (RocketDelay > 0)
		{
			RocketDelay--;
			If (GetAge() % 8 == 0 && (Master && Master.Health <= Master.WoundHealth || AssessThreatLevel (Target) >= ThreatLevelThreshold))
				RocketDelay -= 8; //Get ready to fire rockets twice as fast for very dangerous targets.
			console.printf ("rocketdelay is %d",RocketDelay);
		}
		
		If (RocketDelay <= 0 && GetAge() % 4 == 0 && IsInState (Self,"Fire.Rocket"))
		{
			Actor FuckOff = Spawn ("KAI_TempPoint",GetAttackLocation());
			RocketHazard.Position = FuckOff.Pos;
			Let Finder = BlockThingsIterator.Create (FuckOff,256);
			
			Actor Other;
			While (Finder.Next())
			{
				Other = Finder.Thing;
				If (Level.Vec3Diff (FuckOff.Pos,Other.Pos).Length() > 256 || !(RocketHazard.Flags & RocketHazard.HAZ_NOSIGHT) && !Other.CheckSight (FuckOff,SF_IGNOREWATERBOUNDARY))
					Continue;
				
				HazardInfo.GiveHazard (Other,RocketHazard);
			}
		}
	}
	
	Enum Modes
	{
		MODE_AUTO 	= 0,
		MODE_SEMI 	= 1,
		MODE_SINGLE	= 2,
		MODE_ROCKET = 3,
	}
	
	UInt8 FireMode;
	HazardInfo RocketHazard;
	
	Override Bool ShouldAttack(Bool NoStateJump)
	{
		If (ReactionTime-- > 0 || !MVP_BaseTurret.ShouldAttack(NoStateJump)) //Basic attack checks returned false.
			Return False;
		
		Int TargetLevel = AssessThreatLevel (Target,True);
		
		//Check if an enemy stronger than our current target is nearby and targeting us.
		If (Random (0,255) < 32)
		{
			Array <Actor> Others;
			LookForEnemiesEx (Others,512,False,True);
			ForEach (Targ : Others)
			{
				If (IsDead (Targ))
					Continue;
				
				If (Targ != Target && Targ.Target == Self && AssessThreatLevel (Targ) > TargetLevel)
				{
					Target = Targ;
					Return True;
				}
			}
		}
		
		Double Dist;
		Double RocketDist = (MVP_BigGunDrone(Master) && MVP_BigGunDrone(Master).InCover) ? 6144 : 4096;
		//Check if we should fire rockets. As long as it's not too far for the rockets or the LOF for them is bad.
		If (Target && (Dist = Distance3D (Target)) <= 4096 && RocketDelay <= 0 && KAI_TurretCheckLOF (Target,100,GetDefaultByType("MVP_70mmRocket").ExplosionRadius,(0,16,16),TLOF_OnlyAhead,"MVP_70mmRocket"))
		{
			Int Chance = AttackByQuantity (Target,GetDefaultByType("MVP_70mmRocket").ExplosionRadius,countorigin:True);
			Chance += Random (0,32);
			If (MVP_BigGunDrone(Master) && MVP_BigGunDrone(Master).InCover) Chance += 25;
			If (Random (0,512) < 4) Chance += 60; //Fuck it.
			If (Master && Master.Health <= Master.WoundHealth) Chance += 25;
			If (TargetLevel >= ThreatLevelThreshold) Chance += 40;
			
			Bool ImmuneToBlasts = (Target.bNoRadiusDmg || Target.GetRadiusDamage (Target,256,256,48,False,True) <= 256/8); //The enemy is immune or HIGHLY resistant to blasts.
			
			//Even more likely to fire rockets if the target is not necessarily immune to explosions, however it will still sometimes blast them sometimes even if they are.
			If (!ImmuneToBlasts && Random (0,255) < 128)
				Chance += 80;
			
			Int RNG = Random (80,180);
			console.printf ("ROCKET CHANCE %d, RNG %d",chance,rng);
			If (Chance >= RNG)
			{
				FireMode = MODE_ROCKET;
				SmokeCounter = 3;
				If (!NoStateJump) SetStateLabel ("Fire.Rocket");
				TurretAttackSpeed = GetDefaultByType("MVP_70mmRocket").Speed;
				FastTurretAttackSpeed = GetDefaultByType("MVP_70mmRocket").FastSpeed;
				Return True;
			}
		}
		
		//We have a hostile target in range and within line of fire.
		If (Target && Dist <= MaxTargetRange && KAI_TurretCheckLOF (Target,100,0,FireOfs,TLOF_OnlyAhead,"MVP_RifleBullet"))
		{
			//Determine what fire mode to use by firing 10 traces with a 2 degree wide cone.
			Int Hits = DetermineHitChance (Target,True,Dist,shots:15,FireOfs,(1.5,-1.5,1.5,-1.5),MaxTargetRange,GetFAFPosOffset(Target,TurretAimPos));
			
			If (Hits >= 10)
			{
				FireMode = MODE_AUTO;
				SmokeCounter = Random (25,35);
			}
			Else If (Hits >= 5)
			{
				FireMode = MODE_SEMI;
				SmokeCounter = 3;
			}
			Else
			{
				FireMode = MODE_SINGLE;
				SmokeCounter = 1;
			}
			
			If (!NoStateJump)
			{
				If (FireMode == MODE_AUTO || FireMode == MODE_SEMI) //Normal fire.
					SetState (MissileState);
				Else If (FireMode == MODE_SINGLE) //Sniping
					SetStateLabel ("Fire.Single");
			}
				
			Return True;
		}
		
		Return False;
	}
	
	Void MVP_BigGunDroneShoot()
	{
		If (FireMode == MODE_ROCKET)
		{
			A_StartSound ("Vehicle/Tank/Artillery3",CHAN_WEAPON,CHANF_OVERLAP,0.6);
			Frame = UpdateTurretElevation (8,4,6,6); //I, E, G, G
			Actor Proj = A_SpawnProjectile ("MVP_70mmRocket",FireOfs.Z,16,flags:CMF_AIMDIRECTION,Pitch);
			AddProjectileSpread (Proj,(0.45,-0.45),(0.45,-0.45));
			
			Int RNG = Random (64,72);
			For (Int I = 0; I < RNG; I++)
			{
				Let Fire = Level.SpawnVisualThinker ("MVP_RocketBackblastParticle");
				
				If (Fire)
				{
					Fire.PostBeginPlay();
					KAI_Tracer(Fire).RanPostBeginPlayEarly = True;
					Fire.Pos = KAI_Math.Vec3OffsetRelative (Self,(0,-18,16));
					Fire.Flags |= SPF_ROLL;
					Fire.Roll = FRandom(-180,180);
					Fire.Scale *= FRandom(0.4f,0.75f);
					Fire.PostBeginPlay();
					KAI_Tracer(Fire).RanPostBeginPlayEarly = True;
					Fire.Vel = KAI_Math.AngleToVector3D (Angle+FRandom (12,-12),-Pitch+FRandom (12,-12),FRandom (-2,-8));
				}
			}
			
			MakeAlliesImmuneToExplosion (Self,64);
			A_Explode (64,64,XF_CIRCULAR|XF_CIRCULARTHRUST,False); //Backblast
			RemoveAllyExplosionImmunity();
			Return;
		}
		
		A_StartSound (AttackSound,CHAN_WEAPON,CHANF_OVERLAP,1.0,0.5);
		Bool B; Actor Proj = A_SpawnProjectile ("MVP_RifleBullet",FireOfs.Z,flags:CMF_AIMDIRECTION,Pitch); //pew pew
		Switch (FireMode)
		{
			Case MODE_AUTO:
				AddProjectileSpread (Proj,(0.75,-0.75),(0.75,-0.75));
				Break;
			Case MODE_SEMI:
				AddProjectileSpread (Proj,(0.45,-0.45),(0.45,-0.45));
				Break;
			Case MODE_SINGLE:
				AddProjectileSpread (Proj,(0.3,-0.3),(0.3,-0.2));
				Break;
			Default:
				Break; //No spread since something is wrong anyway if we got here.
		}
		[B, Proj] = A_SpawnItemEx ("MVP_BulletCasing",0,-6,16,FRandom(4,-4),FRandom(4,8),FRandom(3,8));
		If (Master) //Recoil the drone back.
		{
			If (!(MVP_BigGunDrone(Master) && MVP_BigGunDrone(Master).InCover))
				Master.Vel += KAI_Math.AngleToVector3D (Angle,Pitch,-0.25);
			Else
				Master.Vel += KAI_Math.AngleToVector3D (Angle,Pitch,-0.1);
		}
		Proj.Scale.X = 0.125; Proj.Scale.Y = 0.104166;
		Frame = UpdateTurretElevation (9,5,7,7); //J, F, H, H
	}
	
	Vector3 FireOfs;
	Int RocketDelay;
	
	States
	{
		Spawn:
			PND0 E 0;
			PND0 # 1
			{
				RotateToVehicle();
				KAI_Look (maxseedist:MaxTargetRange,DEFAULT_HEARDISTANCE,extraflags:KAIL_CHASETARGET);
				Frame = UpdateTurretElevation (8,4,6,6); //I, E, G, G
			}
			Loop;
		See:
			PND0 # 1
			{
				DoCombatTraverse();
				RotateToVehicle();
				MVP_GunDroneTurretChase();
				If (Target && Master && KAI_Actor(Master) && !Master.Target) //Hull has no target, but we do.
					KAI_Actor(Master).KAI_ShareTarget (Self,Target);
				UpdateTurretSnapTimer();
				Frame = UpdateTurretElevation (8,4,6,6); //I, E, G, G
			}
			Loop;
		Fire:
			PND0 ###### 1 {Frame = UpdateTurretElevation (8,4,6,6); /*I, E, G, G*/}
			PND0 # 3 Light ("RifleFiringLightNoSelfLighting") MVP_BigGunDroneShoot();
			PND0 # 1
			{
				//Out of ammo.
				If (SmokeCounter-- <= 1)
				{
					ReactionTime = Clamp (GameTicRate*Random(2,8),0,UInt8.MAX);
					If (MVP_DroneSwitchTargets(KAI_Actor(Master),2048) && Random (0,255) < 16 && MVP_GunDrone(Master) && MVP_GunDrone(Master).Yapper)
						KAI_Actor(Master).SayVoiceLine (VOICE_SEE,MVP_GunDrone(Master).Yapper);
					Return SeeState;
				}
				
				If (FireMode == MODE_AUTO)
				{
					//If you have no target, or it's dead.
					If (!Target || IsDead (Target))
					{
						A_ClearTarget();
						LookForPlayers (True); //Look for a new target.
					}
					
					If (!KAI_TurretRefire (48,"See",True,16) &&
					//If the target is too high or low to shoot.
					((Target && IsOverPitchLimits (Target,12,GetFAFPosOffset(Target,TurretAimPos)) != ELEVATION_INBOUNDS) ||
					!KAI_TurretCheckLOF (Target,0,0,FireOfs,0,"MVP_RifleBullet")))
					{
						A_ClearTarget();
						Return ResolveState ("See");
					}
				}
				
				HandleChaseTimer();
				
				Frame = UpdateTurretElevation (8,4,6,6); //I, E, G, G
				Return State (Null);
			}
			Goto Fire+6;
		Fire.Single:
			PND0 # 0 {Inaccuracy /= 2.5;} //Be more accurate
			PND0 ################################### 1 {Frame = UpdateTurretElevation (8,4,6,6); /*I, E, G, G*/} //Adjust for one second.
			PND0 # 3 Light ("RifleFiringLightNoSelfLighting") MVP_BigGunDroneShoot();
			PND0 # 0
			{
				If (MVP_DroneSwitchTargets(KAI_Actor(Master),2048) && Random (0,255) < 16 && MVP_GunDrone(Master) && MVP_GunDrone(Master).Yapper)
					KAI_Actor(Master).SayVoiceLine (VOICE_SEE,MVP_GunDrone(Master).Yapper);
				ReactionTime = Random(35,115); //Only wait 1-3 seconds after the last shot if you just sniped.
				Inaccuracy *= 2.5;
			}
			Goto See;
		Fire.Rocket:
			PND0 ################## 1 {Frame = UpdateTurretElevation (8,4,6,6); /*I, E, G, G*/} //Adjust for a bit.
			PND0 # 8 MVP_BigGunDroneShoot();
			PND0 # 0
			{
				//Out of ammo.
				If (SmokeCounter-- <= 1)
				{
					TurretAttackSpeed = Default.TurretAttackSpeed;
					FastTurretAttackSpeed = Default.FastTurretAttackSpeed;
					RocketDelay = GameTicRate*Random (4,10); //Time until next barrage.
					ReactionTime = Clamp (GameTicRate*Random(2,8),0,UInt8.MAX);
					If (MVP_DroneSwitchTargets(KAI_Actor(Master),2048) && Random (0,255) < 16 && MVP_GunDrone(Master) && MVP_GunDrone(Master).Yapper)
						KAI_Actor(Master).SayVoiceLine (VOICE_SEE,MVP_GunDrone(Master).Yapper);
					Return SeeState;
				}
				Return State (Null);
			}
			Goto Fire.Rocket+18;
	}
}

Class MVP_GunDroneGib : Actor
{
	Default
	{
		+RollSprite;
		XScale 0.5;
		YScale 0.41666; //0.5/1.2
		-Solid;
		+NoBlockmap;
	}
	
	States
	{
		Spawn:
			PNDD C 0 NoDelay A_JumpIf (SmokeCounter == 0,"Fall"); //Gun
			PNDD D 0 A_JumpIf (SmokeCounter == 1,"Fall"); //Camera
			PNDD B 0 A_JumpIf (SmokeCounter == 2,"Fall"); //Rocket pod
		Fall:
			PNDD # 1
			{
				Roll += 20;
				If (!TestMobjZ(True) || GetZAt ()+1 >= Pos.Z)
				{
					If (SmokeCounter == 0) //Hit the floor.
					{
						Roll = 185;
						SpriteOffset.Y -= 3;
						Return FindState ("Death",True);
					}
					Else If (SmokeCounter == 1)
					{
						Roll = 0;
						Return FindState ("Death.Camera",True);
					}
					Else
					{
						Roll = 180;
						Return FindState ("Death.RocketPod",True);
					}
				}
				
				Return State(Null);
			}
			Loop;
		Death:
			PNDD C -1;
			Stop;
		Death.Camera:
			PNDD D -1;
			Stop;
		Death.RocketPod:
			PNDD B -1;
			Stop;
	}
}